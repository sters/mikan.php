{
    "name": "sters/mikan.php",
    "description": "Resolve method of Japanese line break problem",
    "authors": [
        {
            "name": "sters"
        }
    ],
    "require": {
        "squizlabs/php_codesniffer": "^3.0@dev"
    },
    "type": "library",
    "license": "MIT",
    "keywords": [
        "mikan.js",
        "japanese"
    ],
    "homepage": "https://github.com/sters/mikan.php",
    "minimum-stability": "dev",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.6",
        "squizlabs/php_codesniffer": "^3.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Mikan\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mikan\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=psr12 src/ tests/",
        "cbf": "phpcbf --standard=psr12 src/ tests/"
    }
}
